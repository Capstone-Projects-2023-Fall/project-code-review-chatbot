#!/usr/bin/env bash
# Script for commit intervention.

# Change this to true to enable commit intervention


# Redirect output to stderr.
exec 1>&2
# enable user input
exec < /dev/tty


export RUN_CODE_REVIEW=true

if [ "$RUN_CODE_REVIEW" = "true" ]; then
    
    # Sending the keystrokes for both GUI and command-line environments
    if [[ "$(uname)" == "Darwin" ]]; then
        echo "Running Code Reivew...."
        osascript -e 'tell application "System Events" to keystroke "p" using {control down, option down}'

        if [ -t 1 ]; then
            read -p "Do you want to proceed with the commit? Check the code review before selecting. (y/n): " user_choice
            if [[ "$user_choice" == "y" || "$user_choice" == "yes" ]]; then
                echo "Proceeding with the commit."
                exit 0
            else
                echo "Commit aborted by the user."
                exit 1
            fi
        else
            # GUI popup
            user_choice=$(osascript -e 'display dialog "Do you want to proceed with the commit? Check the code review before selecting." buttons {"Yes", "No"} default button "No"' -e 'button returned of result')

            if [ "$user_choice" == "Yes" ]; then
                echo "Proceeding with the commit."
                exit 0
            else
                echo "Commit aborted by the user."
                exit 1
            fi
        fi

    elif [[ "$(uname)" == "CYGWIN"* || "$(uname)" == "MINGW"* ]]; then
        echo "Running Code Reivew...."
        powershell.exe -command "(New-Object -ComObject WScript.Shell).SendKeys('%^(p)')"
        
        if [ -t 1 ]; then
            read -p "Do you want to proceed with the commit? Check the code review before selecting. (y/n): " user_choice
            if [[ "$user_choice" == "y" || "$user_choice" == "yes" ]]; then
                echo "Proceeding with the commit."
                exit 0
            else
                echo "Commit aborted by the user."
                exit 1
            fi
        else
            # GUI popup
            user_choice=$(powershell.exe -command "$a = [System.Windows.Forms.MessageBox]::Show('Do you want to proceed with the commit?', 'Confirm', [System.Windows.Forms.MessageBoxButtons]::YesNo); if ($a -eq 'Yes') {'Yes'} else {'No'}")

            if [ "$user_choice" == "Yes" ]; then
                exit 0
            else
                exit 1
            fi
        fi

    else
        echo "Unsupported OS."
        exit 1
    fi
else
    echo "Skipping code review."
    exit 0
fi
